<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/EditBack">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD NEW TRIP"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/EditHeader"
        android:layout_margin="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_title_trip"
        android:hint="Enter Title"
        android:layout_gravity="center"
        android:textColor="@color/EditHeader"
        android:layout_margin="3dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_location_trip"
        android:hint="Enter Location"
        android:textColor="@color/EditHeader"
        android:layout_margin="3dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose a Cover Photo"
        android:textSize="20dp"
        android:textColor="@color/EditHeader"
        android:layout_margin="3dp"/>

    <ImageView
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:id="@+id/imageViewCover1"
        android:tag="profile"
        app:srcCompat="?android:attr/actionModeSelectAllDrawable"
        android:clickable="true"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/btn_cancel"
            android:layout_marginRight="50dp"
            android:background="@color/btnTrip"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Trip"
            android:id="@+id/btn_addTrip"
            android:background="@color/btnTrip"/>

    </LinearLayout>



</LinearLayout>